{
  "name": "hot-utils",
  "version": "1.2.3",
  "description": "various NodeJS utils with TS support",
  "repository": {
    "url": "https://github.com/petarzarkov/hotstuff"
  },
  "keywords": [
    "node",
    "ts",
    "hot",
    "hot-utils",
    "utils",
    "url",
    "object",
    "http"
  ],
  "author": "Petar Zarkov",
  "license": "MIT",
  "main": "hot-utils/index.js",
  "scripts": {
    "start": "node hot-utils/index.js",
    "bnw": "npm run build",
    "prebuild": "npm run clean",
    "clean": "tsc --build --clean",
    "build": "tsc -p tsconfig.json",
    "slc": "tsc -p tsconfig.json --skipLibCheck --skipDefaultLibCheck",
    "bw": "npm run build -- --watch",
    "lint": "tsc --noEmit && eslint -c .eslintrc.js --ext .ts,.tsx ./src",
    "lint:fix": "npm run lint --fix",
    "version:update": "node ./scripts/updateVersion.js",
    "gen:log": "node ./scripts/genLog.js",
    "test": "set NODE_ENV=test&& jest --config=./config/jest.utest.json --forceExit --detectOpenHandles",
    "test:coverage": "set NODE_ENV=test&& npm run test -- --coverage"
  },
  "optionalDependencies": {
    "config": "3.3.6",
    "node-fetch": "3.0.0-beta.9"
  },
  "devDependencies": {
    "@types/config": "0.0.40",
    "@types/jest": "27.4.0",
    "@types/node": "17.0.8",
    "@typescript-eslint/eslint-plugin": "5.12.0",
    "@typescript-eslint/parser": "5.12.0",
    "eslint": "8.9.0",
    "jest": "27.5.1",
    "ts-jest": "27.1.3",
    "ts-node": "10.5.0",
    "typescript": "4.5.5"
  },
  "publishConfig": {
    "access": "public",
    "cache": "cache/.npm"
  },
  "files": [
    "hot-utils",
    "index.d.ts",
    "index.js",
    "index.js.map"
  ],
  "dependencies": {
    "config": "3.3.6",
    "node-fetch": "3.0.0-beta.9"
  }
}
