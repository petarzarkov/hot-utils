{
  "name": "hotstuff",
  "version": "0.0.1",
  "description": "Various NodeJS utils",
  "keywords": [
    "node",
    "ts",
    "utils",
    "http"
  ],
  "author": "Petar Zarkov",
  "license": "MIT",
  "main": "build/index.js",
  "scripts": {
    "start": "node build/src/index",
    "start:env": "node -r dotenv/config build/src/index",
    "bns": "npm run build && npm run start",
    "bnw": "npm run build",
    "prebuild": "npm run clean",
    "clean": "tsc --build --clean",
    "build": "tsc -p tsconfig.json",
    "build:watch": "npm run build -- --watch",
    "lint": "tsc --noEmit && eslint -c .eslintrc.js --ext .ts,.tsx ./src",
    "lint:fix": "npm run lint --fix"
  },
  "devDependencies": {
    "@types/config": "0.0.40",
    "@types/node": "16.11.12",
    "@types/node-fetch": "3.0.3",
    "@typescript-eslint/eslint-plugin": "5.6.0",
    "@typescript-eslint/parser": "5.6.0",
    "eslint": "8.4.1",
    "typescript": "4.5.2"
  },
  "dependencies": {
    "http-status-codes": "2.1.4",
    "node-fetch": "3.0.0-beta.7",
    "config": "3.3.6",
    "ts-node": "9.1.1",
    "abort-controller": "3.0.0"
  },
  "publishConfig": {
    "access": "public",
    "cache": "cache/.npm"
  },
  "files": [
    "build"
  ]
}
